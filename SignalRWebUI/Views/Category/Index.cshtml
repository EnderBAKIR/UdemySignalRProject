@model List<ResultCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Kategori İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Kategori Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Kategori İle İlgili İşlemleri Aşağıdan Yapabilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Kategori Adı</th>
									<th scope="col">Durum</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.CategoryId</td>
										<td>@item.CategoryName</td>
										<td>@item.CategoryStatus</td>
										<td class="btn-outline-danger">Sil</td>
										<td class="btn-outline-success">Güncelle</td>
									</tr>
								}
								
								
							</tbody>
							<a asp-action="CreateCategory" asp-controller="Category" class="btn btn-success" >Yeni Kategori Ekle</a>
						</table>
					</div>
				</div>
			</div>

		</div>
	</div>
</div>

